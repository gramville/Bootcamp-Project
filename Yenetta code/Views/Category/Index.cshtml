@model IEnumerable<Yenetta_code.Models.Category>

@{
    ViewData["Title"] = "Index";
}
@if (TempData["AddedCategory"] != null)
{
    <div class="alert alert-success">@TempData["AddedCategory"]</div>
}
@if (TempData["UpdatedCategory"] != null)
{
    <div class="alert alert-success">@TempData["UpdatedCategory"]</div>
}
@if (TempData["DeletedCategory"] != null)
{
    <div class="alert alert-success">@TempData["DeletedCategory"]</div>
}

@if (TempData["RestoreCategory"] != null)
{
    <div class="alert alert-success">@TempData["RestoreCategory"];</div>
}

<h1>Categories</h1>

<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Create">Create category</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="DeletedCategories">Deleted categories </a>
                
    </li>

</ul>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.categoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.categoryName)
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
